{
  "name": "worktop-auth",
  "version": "1.0.0",
  "description": "Worktop Authentication Service - Containerized",
  "main": "index.js",
  "repository": "https://github.com/devsgnr/auth",
  "author": "Emmanuel Watila",
  "license": "MIT",
  "scripts": {
    "build": "rm -fr dist && yarn tsc",
    "start": "node dist/index.js",
    "watch": "yarn tsc --watch",
    "dev": "nodemon -q ./dist/index.js",
    "dockerize": "yarn build && docker build . -t devsgnr/worktop-auth",
    "run-image": "docker run -p 5000:4000 -d devsgnr/worktop-auth",
    "check-image": "docker ps",
    "scan-image": "docker scan devsgnr/worktop-auth"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "6.4.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.15.0",
    "eslint-plugin-security": "^1.5.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  }
}
